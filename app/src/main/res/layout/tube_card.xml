<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tube Line"
        android:id="@+id/tTube"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Platform"
        android:id="@+id/tPlatform"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/tTube"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arrival time"
        android:id="@+id/tArrivalTime"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:id="@+id/tDestination"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/tArrivalTime"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current locationx"
        android:id="@+id/tCurrLocation"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/tPlatform"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time TO"
        android:id="@+id/tTimeTo"
        android:layout_gravity="right"
        android:layout_below="@+id/tDestination"
        android:layout_alignParentEnd="true" />

</RelativeLayout>